extends layout

block content
  h2(class='card-title')= title

  form(method='GET', action='/vlOnline')
    div.bg-light.text-dark(class='card card-body bump-down')
      fieldset.form-group.field-set
          legend.legend Enter search parameters below
          div.row
            div.form-group.col-md-6
              label(for='facility') Facility: 
              select.form-control.form-control-sm(name='facility', id='facility')
                option(value='') Select
                each facility in facilities
                  option(value=facility.mfl) #{facility.name} (#{facility.mfl})

            div.form-group.col-md-6
              label(for="ccc-number") CCC Number: 
              input.form-control.form-control-sm(type='text', name='ccc-number', id='ccc-number',value='', placeholder='e.g 1810900028')
          div.row
            div.form-group.col-md-12
              input#search.input.btn.btn-primary(type="button", name="search", value="Search")
              span#spinner(style='display:none')
                span.btn.btn-warning
                  span.spinner-grow.spinner-grow-sm 
                  | Please wait...
  div.row
    div.col-md-12    
      div#message
        div.alert.alert-warning
  hr.my-1
  div.row
    div.col-md-12
      h3 Search results
  div.row
    div.col-md-12
      table#vl-results.table.table-secondary.table-bordered.table-striped.table-hover
        thead
          th CCC Number
          th Facility
          th Age
          th Gender
          th Justification
          th Regimen
          th VL Date
          th VL Result